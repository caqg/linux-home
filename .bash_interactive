# -*- Shell-Script -*-

case "$(whoami)" in
root)
    export PS1='# ';;
*)
    export PS1='$ ';;
esac
case "$TERM" in
xterm*|rxvt*)
    PS1='\[\e]0;\u@\h: \w\a\]'"$PS1";;
esac

# export PS2='> '
# export PS3='? '
# export PS4='+ '

set -o ignoreeof
shopt -s cdspell
shopt -s globstar

function +  { pushd "$@"; }
function -  { popd "$@"; }
function =  { dirs -v "$@"; }
function h  { history "$@"; }
function hf { if [ $# -gt 0 ]; then history | grep -e "$*" -; else history; fi; }
function j  { jobs "$@"; }
function k  { kill -9 "$@"; }
function l  { ls -Altrh "$@"; }
function gp { gview -M -; }

##end .bash_interactive
