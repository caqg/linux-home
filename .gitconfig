[core]
	; editor          = $HOME/cmd/e -c -F '((width . 80)(height . 36))'
	editor		= vim
	pager           =

[diff]
	tool            = vimdiff
	compactionHeuristic = true

[difftool "ediff"]
	cmd             = $HOME/cmd/ediff $LOCAL $REMOTE

[merge]
	tool            = vimdiff3
	conflictstyle   = diff3

[mergetool "emerge"]
	cmd             = $HOME/cmd/emerge $BASE $REMOTE $LOCAL $MERGED

[alias]
	aa              = add -A .
	au              = add -u .
	b               = branch
	ci              = commit -v
	co              = checkout
	d               = diff
	di              = diff
	ds              = diff --staged
	g               = gui
	k               = !gitk
	l               = log --color=auto --date=format:%y-%m-%d --pretty=tformat:'%h %ad %<(8,trunc)%al %<(54,trunc)%s' --no-merges
	prefix          = rev-parse --show-prefix
	s               = status -bs -uall .
	ss              = status -bs -uno .
	top             = rev-parse --show-toplevel
	us              = reset --

[push]
	default         = simple

[pull]
	rebase = false

[color]
	branch          = true
	diff            = true
	grep            = true
	interactive     = true
	log             = true
	pager           = true
	push            = true
	showBranch      = true
	status          = true
	ui              = true

[gui]
	warndetachedcommit = true
	recentrepo = /work/linux-home
	fontui = -family Ubuntu -size 12 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family \"Ubuntu Mono\" -size 11 -weight normal -slant roman -underline 0 -overstrike 0

[credential]
	helper          = cache --timeout=14400


## end .gitconfig
