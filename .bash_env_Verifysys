export VERIFYSYS_ROOT=/verifysys/rootdir
export SYSTEMC_HOME=${VERIFYSYS_ROOT}
export SYSTEMC=${SYSTEMC_HOME}
export LLVMROOT=${VERIFYSYS_ROOT}

export PATH=${VERIFYSYS_ROOT}/bin:$PATH

export LD_LIBRARY_PATH+=:${VERIFYSYS_ROOT}/lib-linux64
export LD_LIBRARY_PATH+=:${VERIFYSYS_ROOT}/lib
export LD_LIBRARY_PATH+=:.

export MANPATH+=:${VERIFYSYS_ROOT}/share/man

# example: CXXFLAGS += -I ${SYSTEMC_HOME}/include

